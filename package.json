{
  "name": "vsc-xrpl-tools",
  "description": "A vscode extension providing tools to develop on the XRP Ledger",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.76.0"
  },
  "main": "./dist/ext-src/extension.js",
  "publisher": "limpidcrypto",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xrplToolsContainer",
          "title": "XRPL Tools",
          "icon": "assets/images/logo.png"
        }
      ]
    },
    "views": {
      "xrplToolsContainer": [
        {
          "id": "xrpl-tools.main",
          "name": "xrpl"
        }
      ]
    },
    "commands": [
      {
        "command": "xrpl-tools.refresh",
        "title": "XRPL Tools: Refresh"
      },
      {
        "command": "xrpl-tools.openWalletView",
        "title": "XRPL Tools: Open wallet view"
      },
      {
        "command": "xrpl-tools.generateFaucetWallet",
        "title": "XRPL Tools: Generate faucet wallet"
      }
    ]
  },
  "activationEvents": [
    "onCommand:angular-webview.start"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production --output-hashing none && tsc -p tsconfig.extension.json",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "package": "vsce package --yarn",
    "vscode:prepublish": "npm run build && tsc -p tsconfig.extension.json"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^15.2.4",
    "@angular/common": "^15.2.4",
    "@angular/compiler": "^15.2.4",
    "@angular/core": "^15.2.4",
    "@angular/forms": "^15.2.4",
    "@angular/platform-browser": "^15.2.4",
    "@angular/platform-browser-dynamic": "^15.2.4",
    "@angular/router": "^15.2.4",
    "@types/vscode-webview": "^1.57.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.5.0",
    "vscode-test": "^1.6.1",
    "xrpl": "^2.13.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.4",
    "@angular/cli": "^15.2.4",
    "@angular/compiler-cli": "^15.2.4",
    "@angular/language-service": "^15.2.4",
    "@types/lodash": "^4.14.202",
    "@types/node": "^18.15.9",
    "@types/vscode": "^1.76.0",
    "ts-node": "~10.9.1",
    "tslint": "~6.1.0",
    "typescript": "~4.9.5",
    "vsce": "^1.97.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/limpidcrypto/vsc-xrpl-tools.git"
  }
}
