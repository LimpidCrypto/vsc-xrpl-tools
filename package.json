{
  "name": "xrpl-tools",
  "description": "A vscode extension providing tools to develop on the XRP Ledger",
  "version": "1.0.4",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "publisher": "LimpidCrypto",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xrplToolsContainer",
          "title": "XRPL Tools",
          "icon": "assets/images/logo.png"
        }
      ]
    },
    "views": {
      "xrplToolsContainer": [
        {
          "id": "xrpl-tools.main",
          "name": "xrpl"
        }
      ]
    },
    "commands": [
      {
        "command": "xrpl-tools.refresh",
        "title": "XRPL Tools: Refresh"
      },
      {
        "command": "xrpl-tools.openWalletView",
        "title": "XRPL Tools: Open wallet view"
      },
      {
        "command": "xrpl-tools.generateFaucetWallet",
        "title": "XRPL Tools: Generate faucet wallet"
      }
    ]
  },
  "activationEvents": [
    "onCommand:angular-webview.start"
  ],
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.10.1",
    "@types/vscode": "^1.84.2",
    "codelyzer": "^6.0.2",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^5.2.0",
    "vscode-test": "^1.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/limpidcrypto/vsc-xrpl-tools.git"
  },
  "dependencies": {
    "xrpl": "^2.13.0"
  }
}
